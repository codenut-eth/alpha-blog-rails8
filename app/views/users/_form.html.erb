<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user %> 
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
        <div class="row mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow", placeholder: "Enter a username" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow", placeholder: "Enter your email address" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow", placeholder: "Enter password" %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
        </div>

      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center mb-3">
    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info text-decoration-none" %>
  </div>
</div>
